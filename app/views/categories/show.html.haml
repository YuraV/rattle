.page-header
  .pull-right
    - if current_user && current_user == category.user
      = link_to edit_category_path(category), class: 'btn btn-default' do
        %span.glyphicon.glyphicon-pencil
        = t('words.edit')
      \|
    = link_to categories_path, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-list-alt
      = t('words.back')

  %h1= category.title
#category_posts
  = render category_posts

= render 'posts/form', category: category, post: category.posts.build


:javascript
  $(function(){
    new Rattle.Post({});
    new Rattle.Votes({
      resource: $("#category_posts")
    });
  })